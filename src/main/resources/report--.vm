<script>
    $(document).ready( function () {
        $('#caseTable').DataTable();
    } );
    function test(ele){
        let dom =ele
        if(dom.hasClass('dsn')){
            dom.removeClass('dsn')
            dom.addClass('show')
        }else{
            dom.removeClass('show')
            dom.addClass('dsn')
        }
    }
    function random() {
        var x = 10000;
        var y = 1000;
        var rand = parseInt(Math.random() * (x - y + 1) + y);
        return rand;
    }
