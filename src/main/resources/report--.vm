<div class="container-fluid" id="main">
    <h2>Overall Statistics</h2>
    <div class="row" style="height: 300px">
        <div class="col-md-4" id="sum">
            <table class="table">
                <thead>
                <tr>
                    <th>Total</th>
                    <th>Passed</th>
                    <th>Failed</th>
                    <th>Skipped</th>
                    <th>Duration</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>$allSuites.getTotalNumber()</td>
                    <td>$allSuites.getPassedNumber()</td>
                    <td>$allSuites.getFailedNumber()</td>
                    <td>$allSuites.getSkippedNumber()</td>
                    <td>$allSuites.getDurationString()</td>
                </tr>
                </tbody>
            </table>

        </div>
        <div class="col-md-4" id="sumPie" ></div>
        </div>
    </div>
    <script type="text/javascript">
        var myChart = echarts.init(document.getElementById('sumPie'));
        var option = {
            title: {
                text: 'Statistics by suite',
                subtext: ''
            },
            tooltip: {
                trigger: 'axis',
                axisPointer: {
                    type: 'shadow'
                }
            },
            legend: {
                data: ['passed', 'failed','skipped']
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            xAxis: {
                type: 'value',
                boundaryGap: [0, 0.01]
            },
            yAxis: {
                type: 'category',

                data: [
                    #foreach ($suite in $suiteList)
                            '$suite.getSuiteName()',
                    #end
                    ]
            },
            series: [
                {
                    name: 'pass',
                    type: 'bar',
                    data: [
                        #foreach ($suite in $suiteList)
                                $suite.getPassedNumber(),
                        #end
                        ]
                },
                {
                    name: 'fail',
                    type: 'bar',
                    data: [
                        #foreach ($suite in $suiteList)
                                $suite.getFailedNumber(),
                        #end
                    ]
                },
                {
                    name: 'skipp',
                    type: 'bar',
                    data: [
                        #foreach ($suite in $suiteList)
                                $suite.getSkippedNumber(),
                        #end
                    ]
                }
            ]
        };
        myChart.setOption(option);
    </script>

