<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">

<head>
    <meta charset="UTF-8"></meta>
    <title>Test Report</title>
    <script src="js/jquery-3.5.1/jquery-3.5.1.min.js"></script>
    <script src="js/bootstrap-4.5.0-dist/js/bootstrap.min.js"></script>
    <script src="js/echarts/echarts.min.js"></script>
    <link rel="stylesheet" href="js/bootstrap-4.5.0-dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8"
            src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>
    <script>
        function random() {
            var x = 10000;
            var y = 1000;
            var rand = parseInt(Math.random() * (x - y + 1) + y);
            return rand;
        }
    </script>
    <style>
        p {
            color: #856404;
        }

        #main {
            margin-left: 10px;
            margin-right: 10px;
        }

        body {
            background-color: #fff;
        }
        

        .box {
            display: flex;
            flex-wrap: nowrap;
            margin-top: 1%;
        }

        .list {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 49.9%;
            height: 400px;
            border: solid 1px #ddd;
        }

        /*.show {*/
        /*    display: block;*/
        /*}*/

        /*.dsn {*/
        /*    display: none;*/
        /*}*/
        span{
            font-weight: bold;
        }
    </style>

</head>
<body class="">

<div class="box">
    <div class="list" style="border-left: none">
        <h3>Summary</h3>
        <div class="list">
        <p><span>Date:</span> $allSuites.getDate()</p>
        <p><span>Total cases:</span>$allSuites.getTotalNumber()</p>
        <p><span>Passed:</span> $allSuites.getPassedNumber()</p>
        <p><span>Failed:</span> $allSuites.getFailedNumber()</p>
        <p><span>Skipped:</span> $allSuites.getSkippedNumber()</p>
        <p><span>Duration:</span> $allSuites.getDurationString()</p>
        </div>
        <div id="overall" class="list"></div>
        <script type="text/javascript">
            var myChart = echarts.init(document.getElementById('overall'));
            var option = {
                tooltip: {
                    trigger: 'item',
                    formatter: '{a} <br/>{b}: {c} ({d}%)'
                },
                legend: {
                    orient: 'horizontal',
                    left: 10,
                    data: ['passed', 'failed', 'skipped']
                },
                series: [
                    {
                        name: 'Case number',
                        type: 'pie',
                        radius: ['50%', '70%'],
                        avoidLabelOverlap: false,
                        label: {
                            show: false,
                            position: 'center'
                        },
                        emphasis: {
                            label: {
                                show: true,
                                fontSize: '30',
                                fontWeight: 'bold'
                            }
                        },
                        labelLine: {
                            show: false
                        },
                        data: [
                            {value: $allSuites.getPassedNumber(), name: 'passed'},
                            {value: $allSuites.getFailedNumber(), name: 'failed'},
                            {value: $allSuites.getSkippedNumber(), name: 'skipped'}
                        ]
                    }
                ]
            };
            myChart.setOption(option);
        </script>

    </div>
    <div class="list" id="sumPie">
    </div>
    <script type="text/javascript">
        var myChart = echarts.init(document.getElementById('sumPie'));
        var option = {
            title: {
                text: 'Statistics by suite',
                subtext: ''
            },
            tooltip: {
                trigger: 'axis',
                axisPointer: {
                    type: 'shadow'
                }
            },
            legend: {
                data: ['passed', 'failed', 'skipped']
            },
            grid: {
                left: 100
            },
            toolbox: {
                show: true,
                feature: {
                    saveAsImage: {}
                }
            },
            xAxis: {
                type: 'value',
                boundaryGap: [0, 0.01]
            },
            yAxis: {
                type: 'category',

                data: [
                    #foreach ($suite in $suiteList)
                        '$suite.getSuiteName()',
                    #end
                ]
            },
            series: [
                {
                    name: 'pass',
                    type: 'bar',
                    data: [
                        #foreach ($suite in $suiteList)
                                $suite.getPassedNumber(),
                        #end
                    ]
                },
                {
                    name: 'fail',
                    type: 'bar',
                    data: [
                        #foreach ($suite in $suiteList)
                                $suite.getFailedNumber(),
                        #end
                    ]
                },
                {
                    name: 'skipp',
                    type: 'bar',
                    data: [
                        #foreach ($suite in $suiteList)
                                $suite.getSkippedNumber(),
                        #end
                    ]
                }
            ]
        };
        myChart.setOption(option);
    </script>
</div>


<div class="table-responsive">
    <h3>Executed cases</h3>
    <table class="table" id="caseTable">
        <thead>
        <tr>
            <th>Suite</th>
            <th>TestRun</th>
            <th>Class</th>
            <th>Groups</th>
            <th>CaseName</th>
            <th width="10%">Duration</th>
            <th class="filter">Status</th>
        </tr>
        </thead>
        <tbody>
            #foreach ($suite in $suiteList)
                #foreach($testRun in $suite.getTestRunResults())
                    #foreach($test in $testRun.getAllTests())
                    <tr>
                        <td align="left">$suite.getSuiteName()</td>
                        <td>$testRun.getName()</td>
                        <td align="left">$test.getClassName()</td>
                        <td align="left">$test.getGroups()</td>
                        <td align="left">$test.getName()</td>
                        <td>$test.getDuration()</td>
                        #if($test.getStatus()=='SUCCESS')
                            <td><span class="badge badge-success">$test.getStatus()</span></td>
                        #else
                            <td><span class="badge badge-danger">$test.getStatus()</span></td>
                        #end
                    </tr>
                    #end
                #end
            #end
        </tbody>
    </table>
</div>
</div>
